<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width; initial-scale=1" />

        {# title #}
        <title>{% block title %}Green Goodies{% endblock %}</title>

        {# css #}
        <link rel="stylesheet" href="{{ ('css/main.css') }}"/>
        <link rel="stylesheet" href="{{ ('css/header.css') }}" id="main-css">
        <link rel="stylesheet" href="{{ ('css/home.css') }}" id="main-css">

        {# favicon #}
        <link rel="icon" type="image/png" href="{{ ('images/logo_favicon.png') }}">
    </head>
    <body>
        <main>
            {% include 'partials/_header.html.twig' %}

            {% block body %}{% endblock %}
        </main>





    {# auto refresh #}
    <script>
        setInterval(() => {
            const css = document.getElementById("main-css");
            const currentHref = css.getAttribute("href").split("?")[0];
            css.setAttribute("href", currentHref + "?v=" + new Date().getTime());
        }, 1000);
    </script>

    {# burger menu #}
    <script>
        const burger = document.getElementById('burger');
        const navLinks = document.getElementById('navLinks');

        burger.addEventListener('click', () => {
            navLinks.classList.toggle('active');
        });
    </script>

    </body>
</html>
